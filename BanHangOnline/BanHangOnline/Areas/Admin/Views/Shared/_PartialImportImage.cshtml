@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Upload Multiple Images";
}

<h2>Upload Multiple Images</h2>

<form asp-action="UploadImages" method="post" enctype="multipart/form-data">
    <div>
        <label for="images">Select images:</label>
        <input type="file" name="images" id="images" multiple accept="image/*" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Upload Images</button>
</form>

@if (ViewData["Message"] != null)
{
    <p style="color: green;">@ViewData["Message"]</p>
}

@if (ViewData["ImagePaths"] != null)
{
    <h3>Uploaded Images:</h3>
    <div>
        @foreach (var imagePath in (IEnumerable<string>)ViewData["ImagePaths"])
        {
            <img src="@imagePath" alt="Uploaded Image" style="max-width: 150px; margin: 5px;" />
        }
    </div>
}