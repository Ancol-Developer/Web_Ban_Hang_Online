@model IEnumerable<Entities.Product>
@using BanHangOnline.Common
@if (Model is not null && Model.Any())
{
	foreach (var item in Model)
	{
		<!-- Product 1 -->
		var strImage = "";
		var img = item.ProductImage.FirstOrDefault(x => x.IsDefault);
		if (img is not null)
		{
			strImage = img.Image;
		}
		<div class="product-item @item.ProductCategory?.Alias">
			<div class="product discount product_filter">
				<div class="product_image">
					<img src="@strImage" alt="@item.Title">
				</div>
				<div class="favorite favorite_left"></div>

				@if (item.IsSale)
				{
					<div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>Sale</span></div>
				}

				<div class="product_info">
					<h6 class="product_name"><a href="/chi-tiet/@item.Alias-p@(item.Id)">@item.Title</a></h6>
					@if (item.PriceSale > 0)
					{
						<div class="product_price">@Common.FormatNumber(item.PriceSale ?? 0, 0)<span>@Common.FormatNumber(item.Price, 0)</span></div>
					}
					else
					{
						<div class="product_price"><span>@Common.FormatNumber(item.Price, 0)</span></div>
					}
				</div>
			</div>
			<div class="red_button add_to_cart_button"><a class="btnAddToCart" data-id="@item.Id" href="#">add to cart</a></div>
		</div>
	}
}